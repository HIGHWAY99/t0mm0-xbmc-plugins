<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.veetle" version="0.1.0" name="Veetle" provider-name="t0mm0">
    <requires>
        <import addon="xbmc.gui"/>
        <import addon="xbmc.plugin"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point= "xbmc.addon.metadata">
        <summary>Browse and stream from veetle.com</summary>
        <description>Enables watching streams on veetle.com that are flash enabled.</description>
        <disclaimer>Does not work for 'HD' streams which require a software download.</disclaimer>
        <platform>all</platform>
    </extension>
</addon>

